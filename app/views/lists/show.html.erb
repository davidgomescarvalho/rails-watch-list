<h1>Ceci est la liste: <%= @list.name %></h1>
<ul>
  <%  @list.bookmarks.each do |bookmark| %>
  <li>
  Movie Title: <%= bookmark.movie.title %>
  Movie overview: <%= bookmark.movie.overview %>
  Movie Poster: <%= bookmark.movie.poster_url %>
  Comment: <%= bookmark.comment %>
  <%= link_to "delete", bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>
<%= link_to "Go  to watchlist", lists_path %>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
